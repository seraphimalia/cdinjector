{
  "name": "ComDispatch: JS/CSS injector",
  "short_name": "CDInjector",
  "manifest_version": 2,
  "version": "1.1.0",
  "description": "CDInjector loads custom Javascript and CSS directly from the cm github repo.",
  "icons": {
    "16": "cd-16.png",
    "24": "cd-24.png",
    "32": "cd-32.png",
    "64": "cd-64.png",
    "128": "cd-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "cd-16.png",
      "24": "cd-24.png",
      "32": "cd-32.png",
      "64": "cd-64.png",
      "128": "cd-128.png"
    },
    "default_title": "CDInjector",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "all_frames": true,
    "run_at":     "document_start",
    "matches":    ["http://*/*", "https://*/*"],
    "js":         ["content-script.js"]
  }],
  "background": {
    "scripts": ["cdinjector.js", "background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs"
  ]
}
